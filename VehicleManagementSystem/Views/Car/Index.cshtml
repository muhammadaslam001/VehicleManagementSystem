@model IEnumerable<VehicleManagementSystem.Models.Car>

@{
    ViewBag.Title = "Index";
}
<br /><br />

<script>
    $(document).ready(function () {
        $("#ddlCar").change(function(){
            window.location.href="/Car/AddCar"

        });
    })

</script>

<div class="row">


    <div class="col-md-6">
        @Html.DropDownList("CreateCar", new List<SelectListItem> {
     new SelectListItem {Value="car",Text="Create Car" }
     }, "--select option--", new { id = "ddlCar", @class = "form-control font-family-arial h-100 w-75 text-justify" })

    </div>
    <div class="col-md-6"></div>

</div>
<br /><br />
@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered table-dark">
        <thead>
            <tr style="background-color:darkgrey;font-family:Arial, Helvetica, sans-serif;font-weight:bold">
                <th>
                    @Html.DisplayNameFor(model => model.Make)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Model)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BodyType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Year)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Registration)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Engine)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberOfDoors)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberOfWheels)
                </th>


                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Make)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BodyType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Registration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Engine)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfDoors)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfWheels)
                    </td>


                    <td>
                        @Html.ActionLink("Edit", "EditCar", new { id = item.Id }, new { @class = "btn btn-sm btn-primary" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { onclick = "return confirm('Are you sure wants to delete?');", @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="alert alert-success text-center">
        <h2>There is no data in database.</h2>
    </div>
}
